<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.carltaylordev.recordlisterandroidclient.Info2Fragment">

    <EditText
        android:id="@+id/edit_text_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Optional Comments"/>

    <Spinner
        android:id="@+id/spinner_record_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <Spinner
        android:id="@+id/spinner_cover_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <EditText
        android:id="@+id/edit_text_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price"
        android:inputType="numberDecimal"
        />

</LinearLayout>
